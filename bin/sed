#!/usr/bin/env python3
# This file is placed in the Public Domain.


"sed <txt1> <txt2>"


__author__ = "Bart Thate <programmingobject@gmail.com>"


import os
import subprocess
import sys


SKIP = [
        "env"
       ]


def files(path, end, txt):
    older = os.getcwd()
    os.chdir(path)
    for fnn in os.listdir(path):
        if fnn.startswith(".") or fnn.startswith("_"):
            continue
        if fnn in SKIP:
            continue
        fpath = os.path.abspath(os.path.join(path, fnn))
        if os.path.isdir(fpath):
            files(fpath, end, txt)
            continue
        if end and not fnn.endswith(end):
            continue
        print(fpath, txt)
        popen(txt + " " + fpath)
    os.chdir(older)


def popen(txt):
    with subprocess.Popen(txt.split(),
                          stdin=sys.stdin,
                          stdout=sys.stdout,
                          stderr=sys.stderr,
                          close_fds=False
                         ) as prok:
        prok.communicate()
        prok.wait()


try:
    OLD, *NEW = sys.argv[1:]
    files(".", ".py", f"sed -s -u -i s/{OLD}/{NEW[0]}/")
except ValueError:
    print("sed <OLD> <NEW>")
