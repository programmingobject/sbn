"create sphinx envirnment"


import subprocess
import sys


TXT = '''"Jinja2==3.0.0" "mock==1.0.1" "pillow>5.4.1" "alabaster>=0.7,<0.8,!=0.7.5" "commonmark==0.8.1" "recommonmark==0.5.0" "sphinx<2" "sphinx-rtd-theme<0.5" "readthedocs-sphinx-ext<2.2"'''
#TXT = '''Jinja2 mock pillow alabaster commonmark recommonmark sphinx sphinx-rtd-theme readthedocs-sphinx-ext'''


def popen(txt):
    proc = subprocess.Popen(
                            txt,
                            stdin=sys.stdin,
                            stdout=sys.stdout,
                            stderr=sys.stderr,
                            close_fds=False,
                            shell=True,
                            text=True
                           )
    proc.communicate()
    proc.wait()


popen("env/bin/python3 env/bin/pip3 install -I %s" % TXT)
