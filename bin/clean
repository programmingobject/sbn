# pylint: disable=C0114,C0115,C0116,W0703


import os
import sys


os.environ["PATH"] += ":bin"


def popen(txt):
    for line in os.popen(txt).readlines():
        print(line.rstrip())
        sys.stdout.flush()



def main():
    popen("rm -fRv build dist MANIFEST *.egg-info *.whl")
    popen("rm -fRv .pytest_cache .test  __pycache__ *~ .*~")
    popen("loop . rm -fRv *~")
    popen("loop . rm -fRv __pycache__")


if __name__ == "__main__":
    main()
