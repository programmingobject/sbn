#!/usr/bin/env python3
# This file is placed in the Public Domain.
#
# pylint: disable=C0114,C0115,C0116,W0703,R1732,C0103,W0621,W1514,C0201,C0209


import json
import os
import sys


os.environ["PATH"] += ":bin"
os.environ["PYTHONPATH"] = os.getcwd()
os.environ["PYTHONUNBUFFERED"] = "1"


SKIP = [
        "***",
        "---",
        "Your code",
        "bin/sbn"
       ]


SKIPDIR = [
           ".",
           "files",
           "env",
           ".git",
          ]

SKIPFILE = [
           "setup.py",
           "README.rst",
           "MANUAL.rst",
           'MANIFEST.in',
           '.tsd',
           'pyproject.toml'
           ]


def doskip(txt, skiplist):
    if not txt.strip():
        return True
    for skp in skiplist:
        if ".tsd" == skp:
            continue
        if skp in txt:
            return True
    return False


def diff(obj, obj2):
    result = {}
    for key, value in obj2.items():
        if key in obj and obj[key] != value:
            result[key] = value
    return result


def dump(path, result):
    old = os.getcwd()
    os.chdir(path)
    for fnn in os.listdir(path):
        if doskip(fnn, SKIPFILE):
            continue
        fpath = os.path.abspath(os.path.join(path, fnn))
        if os.path.isdir(fpath):
            if doskip(fnn, SKIPDIR):
                continue
            dump(fpath, result)
            continue
        result[fpath] = os.path.getmtime(fpath)
    os.chdir(old)


def popen(txt):
    for line in os.popen(txt).readlines():
        if doskip(line, SKIP):
            continue
        print(line.rstrip())
        sys.stdout.flush()


if __name__ == "__main__":
    popen("clean")
    result = {}
    old = {}
    if os.path.exists(".tsd"):
        try:
            with open(".tsd") as tsd:
                old.update(json.load(tsd))
        except json.decoder.JSONDecodeError:
            pass
    dump(os.getcwd(), result)
    dif = diff(old, result)
    if dif:
        tsd = open(".tsd", "w")
        json.dump(result, tsd)
        tsd.flush()
        tsd.close()
    nr = 0
    for fn in dif.keys():
        if ".tsd" in fn:
            continue
        print(fn)
        popen("pylint %s " % fn)
        nr += 1
    if not nr:
        print("no changes")
